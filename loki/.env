# Loki 환경 변수 설정

# 기본 설정
TZ=Asia/Seoul

# 포트 설정
LOKI_PORT=1004
LOKI_INTERNAL_PORT=3100
LOKI_GRPC_PORT=9096

# 데이터 보존 설정
LOKI_RETENTION_PERIOD=720h  # 30일

# 네트워크 설정
NETWORK_NAME=meritz-network
RESTART_POLICY=unless-stopped

# 리소스 제한 (선택적)
LOKI_MEMORY_LIMIT=1g
LOKI_CPU_LIMIT=0.5

# 백업 설정
BACKUP_RETENTION_DAYS=30
