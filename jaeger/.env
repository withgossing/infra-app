# Jaeger 환경 변수 설정

# 기본 설정
TZ=Asia/Seoul

# 포트 설정
JAEGER_UI_PORT=1005
JAEGER_COLLECTOR_PORT=1006
JAEGER_INTERNAL_UI_PORT=16686
JAEGER_INTERNAL_COLLECTOR_PORT=14268

# 스토리지 설정
SPAN_STORAGE_TYPE=memory
COLLECTOR_OTLP_ENABLED=true

# 네트워크 설정
NETWORK_NAME=meritz-network
RESTART_POLICY=unless-stopped

# 리소스 제한 (선택적)
JAEGER_MEMORY_LIMIT=512m
JAEGER_CPU_LIMIT=0.5
