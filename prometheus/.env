# Prometheus 환경 변수 설정

# 기본 설정
TZ=Asia/Seoul
PROMETHEUS_RETENTION_TIME=200h
PROMETHEUS_STORAGE_PATH=/prometheus

# 외부 URL 설정
PROMETHEUS_EXTERNAL_URL=https://prometheus.meritz.com

# 성능 설정
PROMETHEUS_QUERY_MAX_CONCURRENCY=20
PROMETHEUS_QUERY_TIMEOUT=2m

# 보안 설정
PROMETHEUS_ADMIN_API_ENABLED=true
PROMETHEUS_WEB_ENABLE_LIFECYCLE=true

# 네트워크 설정
NETWORK_NAME=meritz-network
RESTART_POLICY=unless-stopped

# 포트 설정
PROMETHEUS_PORT=1002
PROMETHEUS_INTERNAL_PORT=9090

# 리소스 제한 (선택적)
PROMETHEUS_MEMORY_LIMIT=2g
PROMETHEUS_CPU_LIMIT=1.0

# 백업 설정
BACKUP_RETENTION_DAYS=30
